{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "stripInternal": true,
    "lib": ["es2015"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
  ]
}

